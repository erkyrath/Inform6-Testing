Include "Parser";
Include "VerbLib";

Object Start "Starting Point"
    with    description
                "An uninteresting room.",
	with before [;
		Jump:
			box
				"   This is a test"
				"of the box quotation"
				"      feature.";
			"Boing.";
		WaveHands:
			box
				"                         This is a test"
				"of the box quotation feature with an extremely wide box to test"
				"                         narrow screens.";
			"Flip.";
	],
            has light;

[ Initialise;
    location = Start;
];

Include "Grammar";

