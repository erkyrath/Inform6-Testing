!% $GRAMMAR_VERSION=3

#ifdef EARLY_ACTION_VERB;
Verb 'whatever' * -> Inv;
#endif;

#ifdef EARLY_FAKE_ACTION;
Fake_Action xyzzy;
#endif;

#ifdef EARLY_ACTION_CONST;
Global actionconst = ##Inv;
#endif;

#ifdef EARLY_ACTION_CASE;
[ TestFunc;
  Inv: rtrue;
  Smooch: rfalse;
];
#endif;

#ifdef SET_GV_1;
Constant Grammar__Version = 1;
#endif;

#ifdef SET_GV_2;
Constant Grammar__Version = 2;
#endif;

#ifdef SET_GV_3;
Constant Grammar__Version = 3;
#endif;

#ifdef SET_GV_4;
Constant Grammar__Version = 4;
#endif;

[ Main;
	print "Grammar version ", Grammar__Version, "^";
];

Verb 'take'
  * 'inventory' -> Inv
  * noun -> Take;
  
Verb 'kiss'
  * creature -> Smooch;

[ InvSub; ];
[ TakeSub; ];
[ SmoochSub; ];
